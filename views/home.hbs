<div class="container">
    <form style="display: flex; align-items: center; padding: 50px 0;" action="/" method="get">
        <input type="number" class="form-control" style="width: 140px; margin-right: 14px;" name="stmonth"
            placeholder="Start month" required>
        <input type="number" class="form-control" style="width: 140px; margin-right: 14px;" name="enmonth"
            placeholder="End month" required>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Month</th>
                <th scope="col">Group</th>
                <th scope="col">Score</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each students}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>{{name}} {{surname}}</td>
                <td>{{month}}</td>
                <td>{{group}}</td>
                <td>{{score}}</td>
                <td>
                    <a class="btn btn-secondary" href="/{{_id}}">Open</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="col-6">
        <form style="margin-top: 100px;" action="/api/add" method="post">
            <div class="mb-3">
                <label for="formname" class="form-label">Name</label>
                <input type="text" name="name" class="form-control" id="formname" placeholder="*" required>
            </div>
            <div class="mb-3">
                <label for="formsurname" class="form-label">Surname</label>
                <input type="text" name="surname" class="form-control" id="formsurname">
            </div>
            <div class="mb-3">
                <label for="formmonth" class="form-label">Month</label>
                <input type="number" name="month" class="form-control" id="formmonth" placeholder="*">
            </div>
            <div class="mb-3">
                <label for="formgroup" class="form-label">Group</label>
                <input type="number" name="group" class="form-control" id="formgroup" placeholder="*">
            </div>
            <div class="mt-3">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>